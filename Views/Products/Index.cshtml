@model IEnumerable<Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
}
<div class="btn-group-vertical">
    <a type="button" asp-controller="Products" asp-action="Create" class="btn btn-primary">Add New Product</a> 
    <partial name="_Notifications"/>
</div>
<table class="table table-borderd table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Created Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
        <tr>
            <td scope="row" width="35%">
                @product.Name
            </td>
            <td scope="row" width="15%">
                    @product.Price
            </td>
            <td scope="row" width="15%">
                    @product.Category.Name
            </td>
            <td scope="row" width="20%">
                    @product.CreatedDate
            </td>
            <td>
                <img src="~/images/@product.Image" style="width:50px;height:50px" />
            </td>
            
            <td >                     
                    <a type="button" asp-controller="Products" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger">-</a>
                    <a type="button" asp-controller="Products" asp-action="Edit" asp-route-Id="@product.Id" class="btn btn-success">+</a>
                    <a type="button" asp-controller="Products" asp-action="Details" asp-route-Id="@product.Id" class="btn btn-primary">?</a>
            </td>
        </tr>
        }
    </tbody>
</table>